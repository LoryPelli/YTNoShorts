{
  "manifest_version": 3,
  "name": "YTNoShorts",
  "description": "Replace youtube shorts video version with normal one",
  "version": "1.0.2",
  "icons": {
      "16":  "./16x16.png",
      "32":  "./32x32.png",
      "48":  "./48x48.png",
      "128": "./128x128.png"
    },
  "action": {
    "default_icon": {
      "16":  "./16x16.png",
      "32":  "./32x32.png",
      "48":  "./48x48.png",
      "128": "./128x128.png"
    }
  },
  "host_permissions": ["https://www.youtube.com/"],
  "background": {
    "service_worker": "index.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      }
    }
  }
}